<Window x:Class="NHkey.HotkeyConfig"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bindPath="clr-namespace:NHkey"
        Title="Hotkey Creation" SizeToContent="WidthAndHeight" Name="NHKey" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Window.Resources>
        <bindPath:Hotkey x:Key="HotkeyBind"/>
    </Window.Resources>
    
    <Grid Name="grid" AllowDrop="False" Background="{DynamicResource WindowBackgroundBrush}">
        <Grid.RowDefinitions>
            <!-- Start-->
            <RowDefinition Height="12"/>
            
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <!-- Spacing -->
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <!-- Spacing -->
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <!-- Spacing -->
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <!-- Spacing -->
            <RowDefinition Height="30"/>
            
            <!-- End-->
            <RowDefinition Height="12"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            
            <!-- Labels -->
            <ColumnDefinition Width="90"/>
            
            <ColumnDefinition Width="20"/>
            <!-- Fields-->
            <ColumnDefinition Width="140" />
            
            <ColumnDefinition Width="20"/>
            
            <ColumnDefinition Width="64"/>
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <Label Content="Nombre"  HorizontalAlignment="Center"  Name="label1" VerticalAlignment="Center" FontSize="12" FontFamily="Rockwell" FontWeight="Bold" Foreground="#FFDEDEDE" Grid.Column="1"  Grid.Row="1"  />
        <TextBox  Text="{Binding Path=Name}"  Name="nameField"  Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AllowDrop="False" Grid.Row="1" TextAlignment="Justify" />

        <Button Content="Buscar" Name="searchProgramButton" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Click="searchProgramButton_Click" Grid.Column="5" Grid.Row="3" Grid.ColumnSpan="1" ToolTip="Abre una ventana para la selección de programa."/>
        <Label Content="Programa" Name="label2" VerticalAlignment="Center" HorizontalAlignment="Center"  FontSize="12" FontFamily="Rockwell" FontWeight="Bold" Foreground="#FFDEDEDE" Grid.Column="1" Grid.Row="3" />
        <TextBox Text=""  Name="programField" IsReadOnly="True" AcceptsTab="True"  Grid.Column="3" Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" TextAlignment="Justify" />

        <Label Content="Parametros"  Name="parameterLabel" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" FontFamily="Rockwell" FontWeight="Bold" Foreground="#FFDEDEDE" Grid.Column="1" Grid.Row="5" />
        <TextBox  Text="{Binding Path=Parameters}"  Name="parametersField" AcceptsTab="True"  Grid.Column="3" Grid.Row="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  />

        <Label Content="Combinación"  HorizontalAlignment="Center" VerticalAlignment="Center" Name="label3"   FontSize="12" FontFamily="Rockwell" FontWeight="Bold" FontStyle="Normal" Foreground="#FFDEDEDE" Grid.Column="1" Grid.Row="7"/>
        <TextBox Text="{Binding Mode=OneWay, Path=HotkeyText}"  Name="combinationField" KeyDown="combinationField_KeyDown" AcceptsTab="False" IsReadOnly="True" KeyUp="combinationField_KeyUp"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   Grid.Row="7" Grid.Column="3" />

        <Border BorderThickness="1" Grid.Column="5" Grid.Row="5" Grid.RowSpan="3"  Width="64" Height="64" BorderBrush="Black" >
            <Image  Source="{Binding Path=Icon}" HorizontalAlignment="Stretch" Name="icon" Stretch="UniformToFill"  VerticalAlignment="Stretch"  Grid.Column="5" Grid.Row="5" Grid.RowSpan="3" OpacityMask="Black" Height="64" Width="64"/>
        </Border>
        
        <DockPanel Grid.Row="9" Grid.Column="3" Grid.ColumnSpan="1"  HorizontalAlignment="Stretch">
            <Button DockPanel.Dock="Left" Content="    Guardar    "   Name="saveButton"  Click="saveButton_Click" />
            <Button DockPanel.Dock="Right" Content="Cancelar"  Name="cancelButton" Click="cancelButton_Click" />
        </DockPanel>
    </Grid>
</Window>
