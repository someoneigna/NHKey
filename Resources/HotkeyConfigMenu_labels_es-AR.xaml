<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:String x:Key="HotkeyConfigTitle">Creación de hotkey</system:String>

    <!-- Labels -->
    <system:String x:Key="NameLabel">Nombre</system:String>
    <system:String x:Key="ProgramLabel">Programa</system:String>
    <system:String x:Key="ParameterLabel">Parametros</system:String>
    <system:String x:Key="ParameterFieldTooltip">Los parámetros a pasar para el programa.</system:String>
    <system:String x:Key="CombinationLabel">Combinacion</system:String>
    <system:String x:Key="CombinationFieldTooltip">La combinacion de teclas para la hotkey.</system:String>

    <!-- Buttons -->
    <system:String x:Key="SearchButton">Buscar</system:String>
    <system:String x:Key="SearchButtonTooltip">Abre una ventana para la selección de programa.</system:String>
    <system:String x:Key="SaveButton">Guardar</system:String>
    <system:String x:Key="CancelButton">Cancelar</system:String>

    <!-- Messages -->
    <system:String x:Key="UnfilledFieldsMessage">Deben llenarse los campos antes de continuar.</system:String>
    <system:String x:Key="UnfilledFieldsMsgBoxTitle">Campos en estado invalido</system:String>

    <!-- Dialogs -->
    <system:String x:Key="SearchProgramTitle">Selecciona un programa</system:String>

</ResourceDictionary>